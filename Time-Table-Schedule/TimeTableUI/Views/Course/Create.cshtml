@model IEnumerable<TimeTableUI.Models.VMs.CourseVM>
<div class = "row">
    <div class = "col-md-6 col-lg-6">
        <div class = "card card-custom">
            <div class = "card-header">
                <h3 class = "card-title">
                    Create Course
                </h3>
                <div class = "card-toolbar">
                    <div class = "example-tools justify-content-center">
                        <span class = "example-toggle" data-toggle = "tooltip" title = "View code"></span>
                        <span class = "example-copy" data-toggle = "tooltip" title = "Copy code"></span>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            <form id = "courseForm">
                <div class = "card-body">
                    <div class = "form-group mb-8">
                        <div id = "showMessage"></div>
                    </div>
                    <div class = "form-group input-group-lg">
                        <label>Id: <span class = "text-danger">*</span></label>
                        <input type = "number" class = "form-control" id = "courseId" name = "id" placeholder = ""/>
                    </div>

                    <div class = "form-group input-group-lg">
                        <label>Name <span class = "text-danger">*</span></label>
                        <input type = "text" class = "form-control" id = "courseName" name = "name" placeholder = ""/>
                    </div>

                    <div class = "float-right">

                    </div>
                </div>
                <div class = "card-footer">
                    <button type = "button" id = "saveRoomBtn" class = "btn btn-primary mr-2">Submit</button>
                    <button type = "reset" class = "btn btn-secondary">Cancel</button>
                </div>
            </form>
            <!--end::Form-->
        </div>
    </div>


    <div class = "col-md-6 col-lg-6">
        <div class = "card card-custom">
            <div class = "card-header flex-wrap py-3">
                <div class = "card-title">
                    <h3 class = "card-label">
                        Created Courses
                    </h3>
                </div>
